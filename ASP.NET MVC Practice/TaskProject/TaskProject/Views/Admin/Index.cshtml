@model TaskProject.Models.Employee_Status

@{
    ViewBag.Title = "Index";
}

<h2>Employee</h2>

<p>
    @using (Html.BeginForm("Create", "Admin"))
{
        @Html.AntiForgeryToken()
        <div class="form-group">
           Employee Name
            <div class="col-md-10">
                @Html.Editor("empname")
                <input type="submit" value="Create Employee" class="btn btn-default" />
            </div>
        </div>
}
</p>
<table class="table">
    <tr>
        <th>
            Employee Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.employees)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EmployeeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.EmployeeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EmployeeId })
        </td>
    </tr>
}

</table>

<h2>Status</h2>

<p>
    @using (Html.BeginForm("CreateStatus", "Admin"))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            Employee Name
            <div class="col-md-10">
                @Html.Editor("statusname")
                <input type="submit" value="Create Status" class="btn btn-default" />
            </div>
        </div>
    }
</p>
<table class="table">
    <tr>
        <th>
            Status Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.statuses)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StatusName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Status",new { id = item.StatusId }, null) |
                @Html.ActionLink("Details", "DetailsStatus", new { id = item.StatusId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.StatusId })
            </td>
        </tr>
    }

</table>

